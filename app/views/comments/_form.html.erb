<%= form_for :comment, url: post_comments_path(@post), html:{class:"m-3"} do |f| %>
<div class="mb-3">
  <%= f.label :user_name, class:"form-label" %>
  <%= f.text_field :user_name, class:"form-control" %>
</div>
<div class="mb-3">

  <%= f.label :text, class:"form-label" %>
  <%= f.text_field :text, class:"form-control" %>
</div>
<%= f.submit "Коментувати", class:"btn btn-success"%>
<% end %>
